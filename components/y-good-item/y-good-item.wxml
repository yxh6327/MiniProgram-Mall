    <view>
        <image src="{{item.show.img || item.image}}"
               mode="widthFix"
               class="good-image"></image>
    </view>
    <view class="desc">
        <view class="good-title">{{item.title}}</view>
        <view class="text">
            <view class="good-price">ï¿¥{{item.price}}</view>
            <image class="cfav-image"
                src="/assets/common/favor.png"></image>
            <view class="good-cfav">{{item.cfav}}</view>
        </view>
    </view>
</view>
